{{ header }}
<main id="account-order">
  {{ content_top }}
  <div class="container">
    <nav class="breadcrumb py-4" aria-label="breadcrumbs">
      <ul>
        {% for key, breadcrumb in breadcrumbs %}
        {% if key < (breadcrumbs|length - 1) %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% else %}
        <li><span>{{ breadcrumb.text }}</span></li>
        {% endif %}
        {% endfor %}
      </ul>
    </nav>
    <div class="columns is-multiline">{{ column_left }}
      {% if column_left and column_right %}
      {% set class = 'column is-6-fullhd is-6-widescreen is-6-desktop is-12-tablet is-12-mobile' %}
      {% elseif column_left or column_right %}
      {% set class = 'column is-9-fullhd is-9-widescreen is-9-desktop is-12-tablet is-12-mobile' %}
      {% else %}
      {% set class = 'column is-12' %}
      {% endif %}
      <div id="content" class="{{ class }}">
        <h1 class="title is-3">{{ heading_title }}</h1>
        {% if orders %}
        {% for key, order in orders %}
        <div class="box mb-3 px-4 py-3">
          <div class="columns is-mobile is-multiline is-align-items-center">
            <div class="column is-2-desktop is-3-tablet is-3-mobile">
              <p class="is-size-7 has-text-grey">{{ column_order_id }}</p>
              <div class="has-text-weight-bold">
                {{ order.order_id }}
              </div>
            </div>
            <div class="column is-2-desktop is-6-tablet is-9-mobile has-text-right">
              <p class="is-size-7 has-text-grey">{{ column_date_added }}</p>
              <div class="block">
                <b>{{ order.date_added }}</b>
              </div>
            </div>
            <div class="column is-2-desktop is-3-tablet is-6-mobile">
              <p class="is-size-7 has-text-grey">{{ column_status }}</p>
              <div class="block">
                <span class="tag is-primary is-light">{{ order.status }}</span>
              </div>
            </div>
            <div class="column is-2-desktop is-4-tablet is-6-mobile has-text-right">
              <p class="is-size-7 has-text-grey">{{ column_total }}</p>
              <div class="has-text-weight-bold">
                {{ order.total }}
              </div>
            </div>
            <div class="column is-4-desktop is-4-tablet is-12-mobile">
              <div class="block has-text-right">
                <a href="{{ order.view }}" class="button is-primary is-light is-fullwidth">
                  <span class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="-0.5 -0.5 16 16" stroke-linecap="round" stroke-linejoin="round" stroke="currentColor"  height="24" width="24">
                      <path d="M4.6875 10.024375000000001 2.9299999999999997 12.1875 1.875 11.46625m2.8125 -5.048125 -1.7574999999999998 2.1637500000000003L1.875 7.860625M4.6875 2.8125 2.9299999999999997 4.97625 1.875 4.255M6.875 10.9375h6.25M6.875 7.5h6.25M6.875 4.0625h6.25" stroke-width="1"></path>
                    </svg>
                  </span>
                  <span>{{ text_history }}</span>
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
        {% else %}
        <p>{{ text_empty }}</p>
        <div class="buttons my-5">
          <a href="{{ continue }}" class="button">{{ button_back }}</a>
        </div>
        {% endif %}
      </div>
      {{ column_right }}
    </div>
  </div>
  {{ content_bottom }}
</main>
{{ footer }}
