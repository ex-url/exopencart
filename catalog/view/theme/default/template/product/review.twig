{% if reviews %}
{% for review in reviews %}
<div class="box">
  <div class="is-flex is-justify-content-space-between is-align-items-center">
    <span class="has-text-black has-text-weight-bold">
      {{ review.author }}
    </span>
    <span class="text-right has-text-grey">{{ review.date_added }}</span>
  </div>
  <div class="mt-3">
    <div class="rating-stars">
      {% for i in 1..5 %}
      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"
        class="{% if i <= review.rating %}has-text-warning{% else %}has-text-grey{% endif %}">
        <path
          d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
      </svg>
      {% endfor %}
    </div>
    <p class="has-text-grey">{{ review.text }}</p>
    {% if review.images %}
    <div class="columns is-mobile is-multiline is-variable is-1 mt-3 mb-0">
      {% for image in review.images %}
        <div class="column is-2-desktop is-2-tablet is-3-mobile">
          <a href="{{ image.popup }}" class="box p-0 is-clipped" data-fancybox="reviews" data-caption="{{ review.text }}">
            <img src="{{ image.thumb }}" alt="review image" />
          </a>
        </div>          
      {% endfor %}
    </div>
    {% endif %}
    {% if review.reply %}
    <div class="mt-2">
      <p>
        <span class="tag is-primary is-light is-medium mr-1">
          <span class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5"/>
            </svg>
          </span>
          <span>{{ replier }}</span>
        </span>
        {{ review.reply }}
      </p>
    </div>
    {% endif %}
  </div>
</div>
{% endfor %}
{{ pagination }}
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %}

<script>
  $(document).ready(function() {
    Fancybox.bind("[data-fancybox=\"reviews\"]", {
      Thumbs : {
        type: "classic"
      },
      Toolbar: {
        display: {
          left: ["infobar"],
          middle: [],
          right: ["close"],
        },
      },
    });
  });
</script>
